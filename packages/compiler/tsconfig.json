{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist/",
		"declaration": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts", "src/**/*.asm.ts"],
	"exclude": ["dist", "node_modules", "tests", "src/**/*.test.ts"]
}
