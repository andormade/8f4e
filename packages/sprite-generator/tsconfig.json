{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist/",
		"declaration": true,
		"types": ["jest", "jest-environment-puppeteer", "jest-image-snapshot"],
		"strictNullChecks": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["**/__tests__/**"]
}
