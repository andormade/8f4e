		"packages/sprite-generator",
		"packages/editor",
		"packages/audio-worklet"
	],
	"lint-staged": {
		"*.ts": [
			"eslint --cache --fix",
			"bash -c tsc --noEmit",
			"jest --findRelatedTests"
		]
	},
	"dependencies": {
		"@8f4e/2d-engine": "file:packages/2d-engine",
		"@8f4e/audio-worklet": "file:packages/audio-worklet",
		"@8f4e/chord-identifier": "file:packages/chord-identifier",
		"@8f4e/compiler": "file:packages/compiler",
		"@8f4e/editor": "file:packages/editor",
