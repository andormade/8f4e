		"eslint-plugin-prettier": "^4.2.1",
		"glslify-bundle": "5.1.1",
		"glslify-deps": "1.3.2",
		"husky": "7.0.4",
		"jest": "27.4.5",
		"jest-image-snapshot": "4.5.1",
		"jest-puppeteer": "6.0.3",
		"lint-staged": "12.1.4",
		"parcel": "2.8.3",
		"puppeteer": "9.1.1",
		"ts-jest": "27.1.2",
		"typescript": "4.7.4",
		"wabt": "^1.0.29"
	},
	"workspaces": [
		"packages/compiler",
		"packages/worker",
		"packages/2d-engine",
